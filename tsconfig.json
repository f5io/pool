{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": [ "src/**/*", "test/**/*" ]
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
